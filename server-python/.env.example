# Server Configuration
NODE_ENV=development
PORT=5000

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Google Custom Search API (for context information feature)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Splunk OpenTelemetry Configuration (Optional)
# Splunk OpenTelemetry Collector のエンドポイント
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# サービス名とメタデータ
OTEL_SERVICE_NAME=hello-bedrock-app-python
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development,service.version=1.0.0

# Splunk プロファイラー設定
SPLUNK_PROFILER_ENABLED=true
SPLUNK_PROFILER_MEMORY_ENABLED=true
SPLUNK_METRICS_ENABLED=true

# トレースサンプリング (always_on, always_off, traceidratio, parentbased_always_on など)
OTEL_TRACES_SAMPLER=always_on

# ログレベル (debug, info, warning, error)
OTEL_LOG_LEVEL=info

# Splunk Realm (Splunk Observability Cloud を使用する場合)
# SPLUNK_REALM=us0
# SPLUNK_ACCESS_TOKEN=your_access_token_here
